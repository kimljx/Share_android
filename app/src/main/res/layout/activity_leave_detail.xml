<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ios="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_staff_trace"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.share.phone.LocationActivity">

    <ios.ui.UINavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <uc.TableHeader
                android:id="@+id/th1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:title="提交人" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:showarrow="false">

                <TextView
                    android:id="@+id/name"
                    style="@style/H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </uc.ListRow>


            <uc.TableHeader
                android:id="@+id/th2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:title="提交时间" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:showarrow="false">

                <TextView
                    android:id="@+id/time"
                    style="@style/H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </uc.ListRow>


            <uc.TableHeader
                android:id="@+id/th3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:title="请假时段" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:marginleftlength="15"
                ios:showarrow="false">

                <TextView
                    style="@style/H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="开始时间" />

                <TextView
                    android:id="@+id/start"
                    style="@style/H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="xx" />
            </uc.ListRow>

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:showarrow="false">

                <TextView
                    style="@style/H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="结束时间" />

                <TextView
                    android:id="@+id/end"
                    style="@style/H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />
            </uc.ListRow>

            <uc.TableHeader
                android:id="@+id/th4"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:title="请假类型" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:showarrow="false">

                <TextView
                    android:id="@+id/type"
                    style="@style/H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </uc.ListRow>

            <uc.TableHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ios:title="备注" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ios:showarrow="false">

                <TextView
                    android:id="@+id/remarks"
                    style="@style/H2"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </uc.ListRow>

            <uc.TableHeader
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:title="审批结果" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:showarrow="false">

                <TextView
                    android:id="@+id/status"
                    style="@style/H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </uc.ListRow>

            <uc.TableHeader
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:title="审批人" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:showarrow="false">

                <TextView
                    android:id="@+id/approver"
                    style="@style/H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </uc.ListRow>

            <uc.TableHeader
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:title="审批时间" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:showarrow="false">

                <TextView
                    android:id="@+id/approval_time"
                    style="@style/H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </uc.ListRow>

            <uc.TableHeader
                android:layout_width="match_parent"
                android:layout_height="44dp"
                ios:title="审批意见" />

            <uc.ListRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ios:showarrow="false">

                <TextView
                    android:id="@+id/approval_adj"
                    style="@style/H2"
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </uc.ListRow>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
